<% include ../../partials/staff/header.ejs %>
    <div class="container">
        <div class="card mt-5 mx-auto w-lg-50 mb-5">
            <div class="card-header">
                <div class="card-title">
                    <h1 class="main-heading text-uppercase head-size"> enquiry</h1>
                </div>
            </div>

            <div class="card-body">
                <form action="/enrolls/add" class="form" method="post">
                   
                    <div class="mb-3">
                        <!-- <label for="">student id</label> -->
                        <input class="form-control" type="hidden" name="studentId" value="<%= sId[0]%>">
                    </div>
                   
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-sm-6 mt-2">
                                <label for="">Start Date</label>
                                <input class="form-control" type="date" placeholder="Start Date" name="startDate" required>
                            </div>
                            <div class="col-sm-6 mt-2">
                                <label for="">End Date</label>
                                <input class="form-control" type="date" placeholder="End Date" name="endDate">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn bg-color-pr  text-white float-end">submit</button>

                </form>
                <button class="btn bg-color-scs  float-end me-2 text-white" onclick="window.history.back()">Back</button>

            </div>

        </div>

    </div>

    <% include ../../partials/staff/footer.ejs %>